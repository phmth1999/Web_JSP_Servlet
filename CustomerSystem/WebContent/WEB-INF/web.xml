<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>CustomerSystem_Servlet</display-name>

	<welcome-file-list>
		<welcome-file>login</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>LoginAction</servlet-name>
		<servlet-class>com.servlet.action.LoginAction</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginAction</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SearchAction</servlet-name>
		<servlet-class>com.servlet.action.SearchAction</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SearchAction</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>EditAction</servlet-name>
		<servlet-class>com.servlet.action.EditAction</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>EditAction</servlet-name>
		<url-pattern>/edit</url-pattern>
	</servlet-mapping>

</web-app>